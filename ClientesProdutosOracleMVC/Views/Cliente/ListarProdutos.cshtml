@using ClientesProdutosOracleMVC.ViewModels
@model IEnumerable<ClienteProdutoViewModel>

@{
    int clienteId = 0;
}

<div class="text-center">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id Produto</th>
                <th scope="col">Nome do produto</th>
                <th scope="col">Categoria</th>
                <th scope="col">Preço do produto</th>
                <th scope="col">Descrição do produto</th>
                <th scope="col">Operações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var clienteProdutoViewModel in Model)
            {
                clienteId = clienteProdutoViewModel.Cliente.ClienteId;
                foreach (var produto in clienteProdutoViewModel.Produtos)
                {
                    <tr>
                        <td>@produto.ProdutoId</td>     
                        <td>@produto.NomeProduto</td>
                        <td>@produto.Categoria</td>
                        <td>@produto.PrecoProduto.ToString("C")</td>
                        <td class="">@produto.DescricaoProduto</td>
                        <td>
                            <a role="button" asp-controller="Produto" asp-action="EditarProduto" asp-route-id="@produto.ProdutoId" class="btn btn-primary">Editar</a>
                            <a role="button" asp-controller="Produto" asp-action="DeletarProduto" asp-route-id="@produto.ProdutoId" class="btn btn-danger">Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="text-center">
        <a role="button" asp-controller="Produto" asp-action="CriarProduto" style="text-decoration: none;" asp-route-id="@clienteId">Criar produto</a>
        <a role="button" asp-controller="Cliente" asp-action="Index" class="btn btn-primary">Voltar</a>
    </div>
</div>

